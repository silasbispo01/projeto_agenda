      <% if(user) { %> 
        <a class="navbar-item" href="/contatos">
          Cadastrar contatos
        </a>
      <% } %> 
    </div>

    <div class="navbar-end">
      <div class="navbar-item">
        <div class="buttons">
          <% if(!user) { %> 
            <a class="button is-primary" href="/cadastro">
              <strong>Criar conta</strong>
            </a>
