<style>
  .logout {
    width: 100px;
  }
</style>
<script>
  let path = window.location.pathname;
  $('a').each(function () {
    let current_path = $(this).attr('href')
    if(current_path == path && current_path != '/') {
      $(this).addClass("is-hidden");
    }
  });
</script>